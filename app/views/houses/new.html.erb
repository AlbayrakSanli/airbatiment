<div class="container">
  <h1 class="mb-1 text-primary">Mettre en ligne une maison</h1>
</div>

<div class="card-body">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <form method="POST">
      <br>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Title</label>
          <input class="form-control rounded-0" type="text" name="title" minlength="5" maxlength="140" placeholder="Quel est le titre de votre maison ?">
        </div>
        <div class="form-group col-md-6">
          <label for="inputState">State</label>
          <select id="inputState" class="form-control" name="city">
            <option selected>Choose...</option>
            <% @cities.each do |city| %>
              <option><%= city.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <br>
      <div class="form-group col">
        <label for="inputEmail4">Description</label>
        <input class="form-control rounded-0" type="text" name="description" minlength="5" maxlength="140" placeholder="Quel est la description de votre maison ?">
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-6">
            <input class="form-control rounded-0" type="number" name="price_house"  placeholder="Quel est le prix de la construction ?" min="100000" max="500000">
        </div>
        <div class="form-group col-md-6">
            <input class="form-control rounded-0" type="number" name="price_visit"  placeholder="Quel est le prix de la visite ?" min="15" max="100">
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-6">
            <input class="form-control rounded-0" type="number" name="area"  placeholder="Quel est le taille de la maison ?" min="60" max="500">
        </div>
        <div class="form-group col-md-6">
            <input class="form-control rounded-0" type="number" name="room"  placeholder="Combien de pièces ?" min="2" max="10">
        </div>
      </div>
      <br>
      <div class="container text-center">
        <input type="submit" value="Créer l'évènement" class="btn btn-lg btn-primary rounded-2">
      </div>
    </form>
  <% end %>
</div>
