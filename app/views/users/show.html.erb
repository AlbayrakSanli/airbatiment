<div class="container profil">
  <div class="avatar-flip">
    <%if @user.avatar.attached?%>
      <%= image_tag @user.avatar, alt: 'avatar' %>
    <%else%>
      <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
    <%end%>
  </div>
  <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  <h4><%= @user.email %></h4>
  <p><%= @user.description %></p>
  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <%= link_to 'Params connect', edit_user_registration_path(@user), class:"btn btn-success" %>
      <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-success" %>
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Est-ce que tu es sûr ?' }, class:"btn btn-danger" %>
    <% end %>
  <% end %>

</div>

  <% @appointments.each do |appointment| %>
  <!-- Loop in availabilities ? -->
    <% unless appointment.availability.nil? %>
      Titre maison : <%= appointment.house.title %></br>
      Date et heure : <%= appointment.availability.date_start.strftime("%d/%m/%Y à %H:%M") %></br>
      Durée visite : <%= appointment.availability.duration %></br>
      Prix visite : <%= appointment.house.price_visit %>€</br>
      <%= link_to "Voir maison", house_path(appointment.house), class:"btn btn-primary" %>
      <%= link_to "Annuler le rdv", appointment_path(appointment.id), method: :delete, class:"btn btn-danger" %></br>
    <% end %>
  <% end %>