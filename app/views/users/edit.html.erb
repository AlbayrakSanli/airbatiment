<div class="container">

  <div class="container">
    <h1 class="mb-1 mt-4 text-primary">Modification du profil</h1>
  </div>

  <div class="card-body">
    <h3>Changer d'avatar ?</h3>
    <%= form_tag user_avatars_path(@user), multipart: true do %>
      <%= file_field_tag :avatar %>
      <%= submit_tag "mettre à jour" %>
    <% end %>
  </div>

  <div class="card-body">
    <h3>Changer vos paramètres personnels !</h3>
    <%= form_tag user_path, method: "patch" do %>
        <br>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= label_tag 'Prénom' %>
            <%= text_field_tag 'first_name', @user.first_name, class: 'form-control' %>
          </div>
          <div class="form-group col-md-6">
            <%= label_tag 'Nom de famille' %>
            <%= text_field_tag 'last_name', @user.last_name, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <%= label_tag 'Description' %>
          <%= text_area_tag 'description', @user.description, class: 'form-control' %>
        </div>
        <br>
        <div class="container text-center">
          <%= submit_tag "Modifier mon profil", class: "btn btn-outline-primary" %>
        </div>
    <% end %>
  </div>

</div>